{{#paper-card as |card|}}
  {{#card.title as |title|}}
    {{#title.text as |text|}}
      {{#text.headline}}PAPER BEATS ROCK{{/text.headline}}
      {{#text.subhead}}It's rock, paper, scissors.{{/text.subhead}}
    {{/title.text}}
  {{/card.title}}
  {{#card.actions}}
    {{#paper-button raised=true onClick=(action "createNewGame")}}NEW GAME{{/paper-button}}
    {{#paper-button raised=true onClick=(action "showGameIdDialog")}}JOIN GAME{{/paper-button}}
  {{/card.actions}}
{{/paper-card}}
{{#if showGameIdDialog}}
  {{#paper-dialog fullscreen=fullscreen origin=dialogOrigin}}
    {{#paper-dialog-content}}
      <h2 class="md-title">Enter game id:</h2>
      {{paper-input placeholder="game id" autofocus=true value=gameId onChange=(action (mut gameId))}}
    {{/paper-dialog-content}}

    {{#paper-dialog-actions class="layout-row"}}
      <span class="flex"></span>
        {{#paper-button onClick=(action "resetDialog")}}Never mind{{/paper-button}}
        {{#paper-button primary=true onClick=(action "joinGame")}}Join!{{/paper-button}}
    {{/paper-dialog-actions}}
  {{/paper-dialog}}
{{/if}}

{{outlet}}
