{{#paper-card as |card|}}
  {{#card.title as |title|}}
    {{#title.text as |text|}}
      {{#text.headline}}PAPER BEATS ROCK{{/text.headline}}
      {{#text.subhead}}It's rock, paper, scissors.{{/text.subhead}}
    {{/title.text}}
  {{/card.title}}
  {{#card.actions}}
    {{#paper-button raised=true onClick=(action "showNameDialog")}}NEW GAME{{/paper-button}}
    {{#paper-button raised=true onClick=(action "joinGame")}}JOIN GAME{{/paper-button}}
  {{/card.actions}}
{{/paper-card}}
{{#if showNameDialog}}
  {{#paper-dialog fullscreen=fullscreen origin=dialogOrigin}}
    {{#paper-dialog-content}}
      <h2 class="md-title">What's your name?</h2>

      {{paper-input placeholder="username" autofocus=true value=name onChange=(action (mut name))}}

    {{/paper-dialog-content}}

    {{#paper-dialog-actions class="layout-row"}}
      <span class="flex"></span>
      {{#paper-button primary=true onClick=(action "resetDialog") }}Never Mind{{/paper-button}}
      {{#paper-button primary=true onClick=(action "createNewGame")}}Play!{{/paper-button}}
    {{/paper-dialog-actions}}
  {{/paper-dialog}}
{{/if}}
{{outlet}}
